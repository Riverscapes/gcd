<Window
    x:Class="GCDViewer.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GCDViewer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="About GCD"
   SizeToContent="WidthAndHeight"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="0,0,5,0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
    </Window.Resources>

    <Grid x:Name="grdMain" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,10"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Image
                x:Name="imgLogo"
                Width="100"
                Height="100"
                Source="pack://application:,,,/GCDViewer;component/Images/GCD_256.png" />


            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold">
                Geomorphic Change Detection (GCD)
            </TextBlock>
        </StackPanel>

        <Grid
            x:Name="grdLinks"
            Grid.Row="1"
            Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition  />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource LabelStyle}">
                Version
            </TextBlock>
            <TextBlock
                x:Name="txtVersion"
                Grid.Row="0"
                Grid.Column="2" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource LabelStyle}">
                Web site
            </TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="2">
                <Hyperlink x:Name="lnkWebsite" RequestNavigate="WebSite_RequestNavigate">https://gcd.riverscapes.net</Hyperlink>
            </TextBlock>
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource LabelStyle}">
                Changelog
            </TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="2">
                <Hyperlink x:Name="lnkChangeLog" RequestNavigate="ChangeLog_RequestNavigate">https://yourwebsite.com/changelog</Hyperlink>
            </TextBlock>
            <TextBlock
     Grid.Row="3"
     Grid.Column="1"
     Style="{StaticResource LabelStyle}">
     Acknowledgements
            </TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="2">
       <Hyperlink x:Name="lnkAcknlowledgements" RequestNavigate="Acknowledgements_RequestNavigate">https://yourwebsite.com/changelog</Hyperlink>
            </TextBlock>
        </Grid>
        <StackPanel
            Grid.Row="4"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="cmdClose"
                Width="75"
                Height="30"
                Margin="10,0,0,0"
                HorizontalAlignment="Right"
                Click="cmdClose_Click"
                IsDefault="True">
                Close
            </Button>
        </StackPanel>
    </Grid>
</Window>
